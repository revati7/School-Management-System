@model IEnumerable<SchoolManagementSystem.Models.tbl_Teacher>

@{
    ViewBag.Title = "Teachers";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h4>Teacher's</h4>
<br />
@{
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
        </script>
    }
}

@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>
                    <select name="gradeID" class="form-control">
                        <option value="0">Search by Grade</option>
                        <option value="1">1st Grade</option>
                        <option value="2">2nd Grade</option>
                        <option value="3">3rd Grade</option>
                        <option value="4">4th Grade</option>
                        <option value="5">5th Grade</option>
                        <option value="6">6th Grade</option>
                        <option value="7">7th Grade</option>
                        <option value="8">8th Grade</option>
                        <option value="9">9th Grade</option>
                        <option value="10">10th Grade</option>
                    </select>
                </td>
                <td>
                    &nbsp;
                    <input type="submit" value="Search by Grade" class="btn btn-info" />
                </td>
                <td>
                    &nbsp;
                    <input type="button" id="btnDisplayAllTeachers" value="Clear" class="btn btn-info" onclick="location.href='@Url.Action("Teachers","Admin")'" />
                </td>
                <td>
                    &nbsp;
                    <input type="button" class="btn btn-info" value="Print" onclick="javascript:window.print()" />    
                </td>
            </tr>
        </table>
    </div>
}
<br />



@{
    if (Model.Count() != 0)
    {
        <table class="table table-borderless table-hover w-100" align="center" style="color:black;">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GradeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>Options</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GradeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditTeacher", new { id = item.TeacherID }, htmlAttributes: new { @class = "btn btn-info" })
                        @Html.ActionLink("Details", "DetailsTeacher", new { id = item.TeacherID }, htmlAttributes: new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "DeleteTeacher", new { id = item.TeacherID }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <table>
            <tr>
                <td>
                    <h6 style="color:red;">No such teacher's found.</h6>
                </td>
            </tr>
        </table>
    }
}
